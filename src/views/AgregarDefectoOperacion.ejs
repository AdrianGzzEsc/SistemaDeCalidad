<%- include ("./partials/_header") %>


    <div class="container">

        <div class="row">
            <!-- FORMULARIO-->


            <div class="col-md-5">
                <div class="card">
                    <h1 class="subtitle4">
                        Agregar Defecto a Operacion
                    </h1>
                    <div class="card-body">

                        <form action="/addDefectoOperacion/" method="post">
                            <div class="form-group">
                                <select class="form-control" name="operacion">
                                <option value="" disabled selected hidden>Operaci√≥n</option>
                                <% for (var i =0; i < mod.length; i++)  {     %>
    
                                    <option value="<%= mod[i].nombre %>" >  <%= mod[i].nombre %> </option>
    
                                    <%  }  %>
                            </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="defecto">
                                <option value="" disabled selected hidden>Defecto</option>
                                <% for (var i =0; i < def.length; i++)  {     %>
    
                                    <option value=" <%= def[i].nombre %>">  <%= def[i].nombre %> </option>
    
                                    <%  }  %>
                            </select>
                            </div>

                            <button class="btn btn-primary" type="submit">
       Agregar
       </button>
                        </form>
                    </div>
                </div>
                <div class="flex" style="margin-top: 2%">
                    <a href="/ajustes/" class="myButton2">Regresar</a>

                </div>
            </div>

            <!--  TABLA CON LOS DATOS-->

            <div class="col-md-7">
                <table class="table table-bordered table-hover">

                    <thead>
                        <tr>

                            <th>#</th>
                            <th>Operacion</th>

                            <th>Defecto</th>
                            <th>Operaciones</th>

                        </tr>


                    </thead>
                    <tbody>

                        <% for (var i =0; i < tasks.length; i++)  {     %>

                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td> <strong> <%= tasks[i].operacion %>   </strong> </td>
                                <td> <strong> <%= tasks[i].defecto %>   </strong> </td>



                                <td>

                                    <a href=/deleteDefectoOperacion/<%=tasks[i]._id %>   class="btn btn-danger" href="turn">Eliminar </a>
                                    <a href=/edit/<%=tasks[i]._id %> class="btn btn-info" href="turn">Editar </a>


                                </td>

                            </tr>


                            <%  }  %>
                                <!--  TABLA CON LOS DATOS-->

                    </tbody>
                </table>


            </div>

        </div>

    </div>

    <%- include ("./partials/_footer") %>