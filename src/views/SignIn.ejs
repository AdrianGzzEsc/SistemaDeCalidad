<%- include ("./partials/_header") %>

    <div class="d-flex mt-5">
        <div class="col mx-auto" style="max-width: 500px;">
            <div id="msg-error"></div>
            <div class="card text-center bg-light">
                <div class="card-body">
                    <form class="form-signin" action="/SignIn" method="POST">

                        <p class="subtitle my-3">Ingresar</p>

                        

                        <label for="email" class="w-100 text-left">Correo electrónico:</label>
                        <input type="email" id="email" class="form-control mb-4" placeholder="ejemplo@grupofimsa.com" autofocus>
                        <label for="password" class="w-100 text-left">Contraseña:</label>
                        <input type="password" id="password" class="form-control mb-4" placeholder="Contraseña">
                        
                        <button id="loginBtn" class="myButton login" type="submit">Ingresar</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>

        <script src="../js/login.js"></script>
        <script src="../js/main.js"></script>
    </body>
</html>