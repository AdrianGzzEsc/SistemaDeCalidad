<%- include ("./partials/_header") %>



    <!-- FORMULARIO-->

    <div class="flex">


        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="Folio" placeholder="Folio" style="width: fit-content;">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="date" name="Fecha" placeholder="Fecha" style="width: fit-content;">
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Departamento" placeholder="Departamento">
                            <option value="" disabled selected hidden>Departamento</option>
                        </select>
                        </div>


                        <div class="form-group">
                            <select class="form-control" name="Operacion" placeholder="Operacion">
                            <option value="" disabled selected hidden>Operacion</option>
                        </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Producto" placeholder="Producto">
                            <option value="" disabled selected hidden>Producto</option>
                        </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Defecto" placeholder="Defecto">
                            <option value="" disabled selected hidden>Defecto</option>
                        </select>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="Cantidad" placeholder="Cantidad" style="width: fit-content;">
                        </div>


                        <div class="flex4">
                            <button class="btn btn-primary" type="submit">
                                    Enviar
                            </button>

                            <button class="btn btn-primary" type="submit" href="/" style="margin-left: 10%;">
                                Salir
                         </button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

