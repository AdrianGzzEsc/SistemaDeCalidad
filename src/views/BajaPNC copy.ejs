    <!-- FORMULARIO-->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col px-3" style="max-width: 750px;">
                <div class="card mb-5">
                    <div class="card-header">
                        <form action="/addBajaPnc/<%=altpnc2[0].folio %>" method="POST">
                            <div class="form-group row justify-content-between">
                                <div class="col-sm-4 col-12">
                                    <label for="select-state">Folio:</label>
                                    <select id="select-state" class="form-control" placeholder="Folio" name="folio" onchange="location = this.value;">
