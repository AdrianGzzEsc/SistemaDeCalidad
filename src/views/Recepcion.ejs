<%- include ("./partials/_header") %>


    <!-- FORMULARIO-->

    <div class="flex">

        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <form action="/addRecepcion/" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="folio" placeholder="Folio" style="width: fit-content;">
                        </div>

                        <div class="flex4">
                            <div>

                                <div class="form-group">
                                    <input class="form-control" type="date" name="fecha" placeholder="Fecha">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="number" name="Doc_Pro" placeholder="#Doc Prov">
                                </div>
                            </div>

                            <div>
                                <div class="form-group">
                                    <input class="form-control" type="number" name="entrada" placeholder="# de Entrada" style="margin-left: 10%;">
                                </div>

                                <div class="form-group">
                                    <input class="form-control" type="number" name="OC" placeholder="# OC" style="margin-left: 10%;">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <select class="form-control" name="Provedor" placeholder="Proveedor">
                            <option value="" disabled selected hidden>Proveedor</option>
                            <% for (var i =0; i < prov.length; i++)  {     %>

                                <option value="<%= prov[i].nombre %>">  <%= prov[i].nombre %> </option>

                                <%  }  %>
                        </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Material" placeholder="Material">
                            <option value="" disabled selected hidden>Material</option>
                            <% for (var i =0; i < mat.length; i++)  {     %>

                                <option value="<%= mat[i].nombre %>">  <%= mat[i].nombre %> </option>

                                <%  }  %>
                        </select>
                        </div>

                        <div class="flex4">

                            <div class="form-group">
                                <input class="form-control" type="number" name="Cantidad" placeholder="Cantidad">
                            </div>
                            <div class="form-group">

                                <select class="form-control" name="Unidad" style="margin-left: 10%; ">
                            <option value="" disabled selected hidden>Unidad</option>
                            <option value="Kg" >Kg</option>
                            <option value="Piezas" >Piezas</option>
                            <option value="Juego" >Juego</option>
                            <option value="m" >m</option>
                            <option value="m2" >m2</option>
                            <option value="Corrugado" >Corrugado</option>

                            



                            </select>
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="form-group">

                                <select class="form-control" name="Inspeccion">
                                <option value="" disabled selected hidden>Inspecci√≥n</option>
                                <option value="Aceptado">Aceptado</option>
                                <option value="Rechazado">Rechazado</option>
                            </select>
                            </div>

                            <div class="flex4">
                                <button class="btn btn-primary" type="submit" onclick="alerta()">
                                    Enviar
                                  
                            </button>

                                <a class="btn btn-primary" type="submit" href="/inicio" style="margin-left: 10%;">
                                Salir
                         </a>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <%- include ("./partials/_footer") %>