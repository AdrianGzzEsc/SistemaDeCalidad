<%- include ("./partials/_header") %>


    <div class="container">

        <div class="row">
            <!-- FORMULARIO-->


            <div class="col-md-5">
                <div class="card">
                    <h1 class="subtitle4">
                        Agregar Pieza
                    </h1>
                    <div class="card-body">

                        <form action="/addPieza/" method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" name="nombre" placeholder="Nombre de Pieza">
                            </div>

                            <button class="btn btn-primary" type="submit">
       Agregar
       </button>
                        </form>
                    </div>
                </div>
                <div class="flex" style="margin-top: 2%">
                    <a href="/ajustes/" class="myButton2">Regresar</a>

                </div>
            </div>

            <!--  TABLA CON LOS DATOS-->

            <div class="col-md-7">
                <table class="table table-bordered table-hover">

                    <thead>
                        <tr>

                            <th>#</th>
                            <th>Pieza</th>
                            <th>Operaciones</th>

                        </tr>


                    </thead>
                    <tbody>

                        <% for (var i =0; i < tasks.length; i++)  {     %>

                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td> <strong> <%= tasks[i].nombre %>   </strong> </td>

                                <td>

                                    <a href=/deletePieza/<%=tasks[i]._id %>   class="btn btn-danger" href="turn">Eliminar </a>
                                    <a href=/edit/<%=tasks[i]._id %> class="btn btn-info" href="turn">Editar </a>


                                </td>

                            </tr>


                            <%  }  %>
                                <!--  TABLA CON LOS DATOS-->

                    </tbody>
                </table>


            </div>

        </div>

    </div>

    <%- include ("./partials/_footer") %>