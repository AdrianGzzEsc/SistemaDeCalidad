<%- include ("./partials/_header") %>

    <div class="container mt-5">

        <div class="row">
            <!-- FORMULARIO-->
            <div class="col-md-5">
                <div class="card">
                    <p class="subtitle mb-0">Agregar Defecto</p>
                    <div class="card-body">
                        <form action="/addDefecto/" method="post">
                            <div class="form-group">
                                <label for="nombredefecto">Defecto:</label>
                                <input id="nombredefecto" class="form-control" type="text" name="nombre" placeholder="Nombre de Defecto">
                            </div>

                            <div class="form-group row text-center">
                                <div class="col">
                                    <button class="myButton" type="submit">Agregar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

            <!--  TABLA CON LOS DATOS-->

            <div class="col-md-7 mt-md-0 mt-5 mb-5">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="text-white tabla">
                        <tr>
                            <th>#</th>
                            <th>Defecto</th>
                            <th>Opci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var cont = 0; %>
                            <% for (var i = tasks.length-1; i >= 0; i--)  {     %>
                                <tr>
                                    <td class="align-middle">
                                        <%= cont+1 %>
                                    </td>
                                    <td class="align-middle"> <strong> <%= tasks[i].nombre %> </strong> </td>
                                    <td class="align-middle">
                                        <a href=/deleteDefecto/<%=tasks[i]._id %> class="btn btn-danger" href="turn">Eliminar </a>
                                    </td>
                                </tr>
                                <%  cont++; }  %>
                                    <!--  TABLA CON LOS DATOS-->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="/js/validate.js"></script>

    <%- include ("./partials/_footer") %>