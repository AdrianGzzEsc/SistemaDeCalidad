<%- include ("./partials/_header") %>

    <!-- FORMULARIO-->

    <div class="flex">


        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <form action="/add" method="post">
                        <div class="flex4">
                            <div class="form-group">
                                <input class="form-control" type="text" name="Folio" placeholder="Folio" style="width: fit-content;">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="date" name="Fecha" placeholder="Fecha" style="width: fit-content; margin-left: 10%;">
                            </div>
                        </div>


                        <div class="form-group">
                            <input class="form-control" type="text" name="Orden" placeholder="Orden de Producción" style="width: fit-content;">
                        </div>

                        <div class="form-group">
                            <select class="form-control" name="defecto" placeholder="defecto">
                            <option value="" disabled selected hidden>Proceso donde ocurrió el defecto</option>
                        </select>
                        </div>

                        <div class="form-group">
                            <select class="form-control" name="Modelo" placeholder="Modelo">
                            <option value="" disabled selected hidden>Modelo</option>
                        </select>
                        </div>
                        <div class="flex5">

                            <label for="name"> Selecciona los Defectos:</label >
                        </div>
                        <div class="flex4">

                            <div class="form-group">
                                <select class="selectpicker" multiple data-live-search="true" class="form-control" >
                           
                                </select>
                            </div>
                        </div>




                        <div class="form-group">
                            <input class="form-control" type="number" name="Cantidad" placeholder="Cantidad" style="width: fit-content;">
                        </div>




                        <div class="form-group">
                            <textarea class="form-control" name="Comentarios" cols="80" placeholder="Comentarios"></textarea>
                        </div>



                        <div class="form-group">
                            <select class="form-control" name="Retrabajable" placeholder="Retrabajable" style="width: fit-content;">
                            <option value="" disabled selected hidden>Retrabajable</option>
                            <option value="Menor">Si</option>
                            <option value="Mayor">No</option>
                        </select>
                        </div>


                       
                        <div class="flex4">
                            <button class="btn btn-primary" type="submit">
                                    Enviar
                            </button>

                            <button class="btn btn-primary" type="submit" href="/" style="margin-left: 10%;">
                                Salir
                         </button>

                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

    <%- include ("./partials/_footer") %>